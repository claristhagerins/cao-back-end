	<!-- Instead of referencing Fully Qualified Class Names we can register 
		Aliases in mybatis-config.xml and use Alias names. -->	
	<select id="getChoiceId" parameterType="String" resultType="String">
		select GET_ID(#{prefix}) as choice_id
	</select>
	
	<insert id="insertPollChoice" parameterType="String" statementType="CALLABLE">
		INSERT INTO CHOICE(CHOICE_ID, CHOICE_NAME, POLL_QUESTION_ID, QUESTION_NAME) 
		VALUES(#{choiceId}, #{choice}, #{pollQuestionId}, #{question})
	</insert>

